<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.SysRoleMenuDao">

    <resultMap type=".entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="roleId" column="ROLE_ID" jdbcType="INTEGER"/>
        <result property="menuId" column="MENU_ID" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into second_floor_cafe.sys_role_menu(ROLE_IDMENU_ID)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.roleId}#{entity.menuId})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into second_floor_cafe.sys_role_menu(ROLE_IDMENU_ID)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}#{entity.menuId})
        </foreach>
        on duplicate key update
ROLE_ID = values(ROLE_ID) MENU_ID = values(MENU_ID)     </insert>

</mapper>

